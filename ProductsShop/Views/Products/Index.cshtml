@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Products";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>

                            </p>
                        </div>
                    </div>
                    <div>
                        <img src="@item.ImageURL" width="100%" alt="@item.ProductName" />
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>

                            @foreach (var product in item.DiscountProducts)
                            {
                                <div>
                                    <p class="card-text">
                                        <b>DiscountPercent: </b>
                                        @product.Discount.DiscountPercent.ToString()
                                    </p>

                                    @if (!string.IsNullOrEmpty(product.Discount.DiscountPercent.ToString()))
                                    {
                                        <p class="card-text">
                                            <b>DiscountStartDate: </b>
                                            @product.Discount.DiscountStartDate.ToString("dd MMM yy")
                                        </p>
                                        <p class="card-text">
                                            <b>DiscountEndDate: </b>
                                            @product.Discount.DiscountEndDate.ToString("dd MMM yy")
                                        </p>
                                    }
                                </div>
                            }
                            <p class="card-text"><b>Price: </b>@item.Price</p>
                            <p class="card-text">
                                <b>Quantity: </b>@item.Quantity
                            </p>
                            @if (item.Quantity > 0)
                            {
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Show Details</a>
                                    <a class="btn btn-outline-success text-white"><i class="bi bi-cart-plus"></i>Add to Cart($x.xx)</a>
                                </p>
                            }
                            else
                            {
                                <p class="card-text text-danger">
                                    Out of Stock
                                </p>
                            }
                            <p class="card-text"><b>Company: </b>@item.Company</p>
                            <p class="card-text"><b>Available: </b>@item.IsAvailable</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                Some Status
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="cart-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>Show Details</a>
                                <a class="btn btn-outline-succes text-white"><i class="bi bi-cart-plus"></i>Add to Cart(Price @item.Price.ToString("c"))</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Products" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add New
    </a>
</div>